                                            <param>
                                                <name>extension</name>
                                                <value>pdo_mysql</value>
                                            </param>
                                            <param>
                                                <name>extension</name>
                                                <value>pdo_odbc</value>
                                            </param>
                                            <param>
                                                <name>extension</name>
                                                <value>pdo_pgsql</value>
                                            </param>
                                            <param>
                                                <name>extension</name>
                                                <value>pdo_sqlite</value>
                                            </param>
                                            <param>
                                                <name>extension</name>
                                                <value>pgsql</value>
